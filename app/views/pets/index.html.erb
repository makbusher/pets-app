<h1>All pets</h1>
<% @pets.each do |pet| %>
  <h2><%= pet.name %></h2>
  <p>Breed: <%= pet.breed %></p>
  <p>Image: <%= pet.image %></p>
  <%= link_to "More Info", pet %>
<% end %>


<%= link_to "New pet", new_pet_path %>

<div class="row">
  <% @pets.each do |pet| %>
   <div class="col-sm-6">
     <div class="card">
       <div class="card-body">
         <h5 class="card-title"><%= pet.name %></h5>
         <p class="card-text">Added:<%= pet.created_at %></p>
         <img src= <%= pet.image %> > # fix sizing of image
         <a href="/pets/:id" class="btn btn-primary">Go somewhere</a>
       </div>
     </div>
    </div>
  <% end %>
</div>